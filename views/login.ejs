</style>
<body>
  <div class="container">
    <div class="col-sm-4 col-sm-offset-4" style="background-color:lavender;">
      <div class="panel-group">
        <form id="user-login" action="/validation" method="post">
          <title>Login Here</title>
          <div class="form-group">
            <label for="username">username</label>
            <input type="text" name="username" placeholder="username" class="form-control">
          </div>
          <div class="form-group">
            <label for="password">password</label>
            <input type="password" name="password" placeholder="password" class="form-control">
          </div>
          <button type="submit" name="button" class="btn btn-success">Login</button>
          <a href="/register" class="btn btn-info">Signup</a>
        <form>
      </div>
    </div>
  </div>
</body>
</html>
